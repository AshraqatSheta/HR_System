    <!--start-top-serch-->
    <div id="search">
        <input type="text" placeholder="Search here..." />
        <button type="submit" class="tip-bottom" title="Search"><i class="icon-search icon-white"></i></button>
    </div>
    <!--close-top-serch-->
    <!--sidebar-menu-->

    <div id="sidebar">
        <a href="#" class="visible-phone"><i class="icon icon-th"></i>Add Training</a>
        <ul>
            <li class="submenu active">
                <a href="#"><i class="icon icon-list"></i> <span>Training</span></a>
                <ul>
                    <li><a href="Training Board.html">Training Board</a></li>
                    <li><a href="Add Training.html">Add Training</a></li>
                </ul>
            </li>
            <li><a href="Employee Attendance.html"><i class="icon icon-th"></i> <span>Attendance</span></a></li>
        </ul>
    </div>
    <!-- Content -->
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Add Training</a> </div>
            <h1>Add Training</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-align-justify"></i> </span>
                            <h5>Add Training</h5>
                        </div>
                        <div>
                        <form method="post" class="form-horizontal">
                        <div class="widget-content nopadding">
                           
                                <div class="control-group">
                                    <label class="control-label">Training Name :</label>
                                    <div class="controls">
                                        <input name="name" type="text" class="span11" placeholder="Training Name" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Start Date :</label>
                                    <div class="controls">
                                        <div data-date="12-02-2012" class="input-append date datepicker">
                                            <input name="start_date" type="text" value="12-02-2012" data-date-format="mm-dd-yyyy" class="span11">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">End Date :</label>
                                    <div class="controls">
                                        <div data-date="12-02-2012" class="input-append date datepicker">
                                            <input name="end_date" type="text" value="12-02-2012" data-date-format="mm-dd-yyyy" class="span11">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Location :</label>
                                    <div class="controls">
                                        <input name="location" type="text" class="span11" placeholder="Location" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Hours Per Day :</label>
                                    <div class="controls">
                                        <input name="hours_per_day" type="text" class="span11" placeholder="Hours per day" />
                                    </div>
                                </div>
                                
                                    <div class="control-group">
                                        <label class="control-label">Skill :</label>
                                        <div class="controls">
                                            
                                                @Html.DropDownList("SkillId", new SelectList(ViewBag.skills, "SkillId", "SkillName"), "Please select", new { @id = "ddlSkills" })
                                                @Html.Hidden("SkillName", null, new { @id = "hfSkillName" })
                                            
                                        </div>
                                    </div>
                                        <div class="control-group">
                                            <label class="control-label">Maximum Rank :</label>
                                            <div class="controls">
                                                <input name="maxRank" type="text" class="span11" placeholder="Max skill rank" />
                                            </div>
                                        </div>
                                        <div class="widget-content nopadding">
                                                <div class="control-group">
                                                    <label class="control-label">Position :</label>
                                                    <div class="controls">
                                                        
                                                            @Html.DropDownList("PositionId", new SelectList(ViewBag.positions, "PositionId", "PositionName"), "Please select", new { @id = "ddlPosition" })
                                                            @Html.Hidden("PositionName", null, new { @id = "hfPositionName" })

                                                        
                                                    </div>
                                                </div>
                                        
                                                <div class="widget-content nopadding">
                                                        <div class="control-group">
                                                            <label class="control-label">Department:</label>
                                                            <div class="controls">
                                                               
                                                                    @Html.DropDownList("DepartmentId", new SelectList(ViewBag.departments, "DepartmentId", "Name"), "Please select", new { @id = "ddlDepartment" })
                                                                    @Html.Hidden("Name", null, new { @id = "hfDepartmentName" })

                                                                
                                                            </div>
                                                        </div>
                                                   
                                                        <div class="control-group">
                                                            <label class="control-label">Maximum Number Of Participants :</label>
                                                            <div class="controls">
                                                                <input name="maxNumPart" type="text" class="span11" />
                                                            </div>
                                                        </div>

                                                        <div class="form-actions">
                                                            <button type="submit" class="btn btn-success">Save</button>
                                                        </div>
                                                    </form>
                            </div>
                                                </div>
                                        </div>
                            </div>
                        </div>
                    </div>
                    <!-- end Content part -->
                    <script src="~/js/jquery.min.js"></script>
                    <script src="~/js/jquery.ui.custom.js"></script>
                    <script src="~/js/bootstrap.min.js"></script>
                    <script src="~/js/bootstrap-colorpicker.js"></script>
                    <script src="~/js/bootstrap-datepicker.js"></script>
                    <script src="~/js/jquery.toggle.buttons.js"></script>
                    <script src="~/js/masked.js"></script>
                    <script src="~/js/jquery.uniform.js"></script>
                    <script src="~/js/select2.min.js"></script>
                    <script src="~/js/matrix.js"></script>
                    <script src="~/js/matrix.form_common.js"></script>
                    <script src="~/js/wysihtml5-0.3.0.js"></script>
                    <script src="~/js/jquery.peity.min.js"></script>
                    <script src="~/js/bootstrap-wysihtml5.js"></script>
                    <script>
                        $('.textarea_editor').wysihtml5();
                    </script>

    </body>
</html>

